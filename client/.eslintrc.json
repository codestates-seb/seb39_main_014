{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "react-app"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true
  },
  "indent": ["error", 4, { "SwitchCase": 1 }],
  "ignorePatterns": ["node_modules/", ".prettierrc"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": 0,
    "no-unused-vars": 1
  }
}
